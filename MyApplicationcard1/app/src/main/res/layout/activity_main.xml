<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <androidx.cardview.widget.CardView
      android:layout_width="100dp"
      android:elevation="10dp"
      app:cardElevation="10dp"
      android:outlineSpotShadowColor="@color/black"
      app:cardCornerRadius="50dp"
      android:layout_height="100dp">

    <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/admin" />

  </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         app:cardBackgroundColor="#F5F5F5"
         app:cardCornerRadius="20dp"
         android:layout_margin="15dp"
         android:elevation="10dp"
         app:cardElevation="10dp"
         android:layout_height="300dp">



         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <androidx.cardview.widget.CardView
                 android:id="@+id/container_1"
                 android:layout_width="150dp"
                 android:layout_height="100dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="40dp"
                 android:layout_marginEnd="15dp"
                 android:layout_marginBottom="15dp"
                 android:elevation="10dp"
                 app:cardBackgroundColor="#00E5FF"
                 app:cardCornerRadius="20dp"
                 app:cardElevation="10dp" >
                 <ImageView
                     android:layout_gravity="center"
                     android:layout_width="50dp"
                     android:src="@drawable/admin"
                     android:layout_height="50dp"/>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:id="@+id/container_2"
                 android:layout_toRightOf="@id/container_1"
                 android:layout_width="150dp"
                 android:layout_height="100dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="40dp"
                 android:layout_marginEnd="15dp"
                 android:layout_marginBottom="15dp"
                 android:elevation="10dp"
                 app:cardBackgroundColor="#ffffff"
                 app:cardCornerRadius="20dp"
                 app:cardElevation="10dp">

                 <ImageView
                     android:layout_gravity="center"
                     android:layout_width="50dp"
                     android:src="@drawable/admin"
                     android:layout_height="50dp"/>

             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:id="@+id/container_3"
                 android:layout_below="@id/container_1"
                 android:layout_width="150dp"
                 android:layout_height="100dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="40dp"
                 android:layout_marginEnd="15dp"
                 android:layout_marginBottom="15dp"
                 android:elevation="10dp"
                 app:cardBackgroundColor="#FF3D00"
                 app:cardCornerRadius="20dp"
                 app:cardElevation="10dp" >

                 <ImageView
                     android:layout_gravity="center"
                     android:layout_width="50dp"
                     android:src="@drawable/admin"
                     android:layout_height="50dp"/>
             </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                 android:id="@+id/container_4"
                 android:layout_width="150dp"
                 android:layout_height="100dp"
                 android:layout_toRightOf="@id/container_3"
                 android:layout_below="@id/container_2"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="40dp"
                 android:layout_marginEnd="15dp"
                 android:layout_marginBottom="15dp"
                 android:elevation="10dp"
                 app:cardBackgroundColor="#F50057"
                 app:cardCornerRadius="20dp"
                 app:cardElevation="10dp" >

                 <ImageView
                     android:layout_gravity="center"
                     android:layout_width="50dp"
                     android:src="@drawable/admin"
                     android:layout_height="50dp"/>
             </androidx.cardview.widget.CardView>
         </RelativeLayout>
     </androidx.cardview.widget.CardView>
</LinearLayout>
